
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
</head>
<body>
    <div class="container"> 
        <form>
            <h2>LogIn</h2>
            <div class="form-group has-error">
                <label for=" txtName" class="control-label col-sm-3">User Name</label>
                <div class="col-sm-3">
                    <input type="text" name="txtName" class="form-control"/>
                    <span class="text-danger">Name Required</span>
                </div>
            </div>
            <div class="form-group">
                <label for="txtpwd" class="control-label col-sm-3">Password</label>
                <div class="col-sm-3">
                    <input type="password" name="txtpwd" class="form-control" />
                    <span class="text-danger">Invalid Password</span>
                </div>
            </div>
            <div class="form-group col-sm-3">
                <button class="btn btn-lg btn-block btn-primary">LogIn</button>
            </div>
        </form>
    </div>
</body>
</html>
